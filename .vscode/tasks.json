{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "gcc",
			"args": [
				"-g",
				"${workspaceFolder}/script.c",
				// "-I/usr/include/libusb-1.0/",
				// "-L/usr/lib",
				"-lusb-1.0",
				"-o",
				"usbTest"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}